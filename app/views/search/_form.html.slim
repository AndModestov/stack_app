= form_tag search_path, method: :get, class: 'navbar-form navbar-left' do
  = text_field_tag 'search_content', params[:search_content], type: 'search', placeholder: 'Search', class: 'form-control'
  = select_tag 'search_context', options_for_select(Search::TYPES, params[:search_context]), class: 'form-control'
  = submit_tag 'Search', class: 'form-control'