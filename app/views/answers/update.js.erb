<% if @answer.errors.empty? %>
  $('.answer#answer-<%= @answer.id %>').html('<%= j render @answer %>');
<% else %>
  <%= render 'answer_errors' %>
<% end %>

$('.edit-answer-link').click(function(e) {
  e.preventDefault();
  $(this).hide();
  answer_id = $(this).data('answerId');
  $('form#edit-answer-' + answer_id).show();
});